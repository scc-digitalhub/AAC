   <profiles>
      <profile>
         <id>local</id>
         <activation>
            <activeByDefault>true</activeByDefault>
         </activation>
         <properties>
            <run.profiles>local${profile.authorization}</run.profiles>
         </properties>
      </profile>
      <profile>
         <id>authorization</id>
         <properties>
            <profile.authorization>,authorization</profile.authorization>
         </properties>
         <dependencies>
            <dependency>
               <groupId>it.smartcommunitylab.aac.authorization</groupId>
               <artifactId>aac-authorization-web</artifactId>
               <version>0.5.0-SNAPSHOT</version>
            </dependency>
         </dependencies>
      </profile>
   </profiles>

   <build>
      <plugins>
         <plugin>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-maven-plugin</artifactId>
            <executions>
               <execution>
                  <id>build-info</id>
                  <goals>
                     <goal>build-info</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
               <addResources>true</addResources>
               <executable>true</executable>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>jaxb2-maven-plugin</artifactId>
            <version>2.5.0</version>
            <executions>
               <execution>
                  <id>SmartCommunity</id>
                  <goals>
                     <goal>xjc</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
               <sources>
                  <source>src/main/resources/jaxb/binding</source>
               </sources>
               <outputDirectory>src/main/generated-sources</outputDirectory>
               <clearOutputDir>false</clearOutputDir>
               <noPackageLevelAnnotations>true</noPackageLevelAnnotations>
               <locale>en</locale>
            </configuration>
            <dependencies>
               <dependency>
                  <groupId>org.jvnet.jaxb2_commons</groupId>
                  <artifactId>jaxb2-value-constructor</artifactId>
                  <version>3.0</version>
               </dependency>
            </dependencies>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
               <skipTests>true</skipTests>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.8</source>
               <target>1.8</target>
            </configuration>
         </plugin>
      </plugins>
      <finalName>aac</finalName>
   </build>



